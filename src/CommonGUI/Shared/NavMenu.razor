@inject BriefingRoom4DCS.BriefingRoom briefingRoom

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="/"><img src="_content/CommonGUI/img/br-logo-blue-horiz.png"
            alt="Briefing Room Logo" </a>
        <button class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="QuickBuilder" Match="NavLinkMatch.All">
                <span class="oi oi-clock" aria-hidden="true"></span>@briefingRoom.Translate("QuickGenerator")
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="FullBuilder" Match="NavLinkMatch.All">
                <span class="oi oi-compass" aria-hidden="true"></span>@briefingRoom.Translate("FullGenerator")
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="CampaignBuilder" Match="NavLinkMatch.All">
                <span class="oi oi-graph" aria-hidden="true"></span>@briefingRoom.Translate("CampaignGenerator")
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="BriefingEditor" Match="NavLinkMatch.All">
                <span class="oi oi-pencil" aria-hidden="true"></span>@briefingRoom.Translate("BriefingEditor")
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="KneeboardEditor" Match="NavLinkMatch.All">
                <span class="oi oi-pencil" aria-hidden="true"></span>@briefingRoom.Translate("KneeboardEditor")
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="SituationEditor" Match="NavLinkMatch.All">
                <span class="oi oi-brush" aria-hidden="true"></span>@briefingRoom.Translate("SituationEditor")
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Manual" Match="NavLinkMatch.All">
                <span class="oi oi-book" aria-hidden="true"></span>@briefingRoom.Translate("Manual")
            </NavLink>
        </li>
    </ul>
</div>
<div class="bottom-logo">
    <img src="_content/CommonGUI/img/br-logo-white.png" alt="Briefing Room Logo" />
    <span class="ver">@BriefingRoom.VERSION (@BriefingRoom.BUILD_VERSION) for DCS @BriefingRoom.TARGETED_DCS_WORLD_VERSION</span>
</div>

@code {
    [CascadingParameter]
    public MainLayout Layout { get; set; }
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
